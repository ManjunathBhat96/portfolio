{
  "extends": [
    "eslint: recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": ["react", "import"],
  "rules": {
    "indent": ["error", 2],
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-unused-vars": "error",
    "react/jsx-uses-vars": "error",
    "no-duplicate-imports": "error",
    "react/jsx-uses-react": "error",
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    // "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true
    // "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/extensions": [".js", ".jsx"]
  }
}
